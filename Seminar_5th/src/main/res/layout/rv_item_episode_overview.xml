<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

<android.support.v7.widget.CardView
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:background="@drawable/recycler_border"
            android:id="@+id/ll_rv_item_episode_overview_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <ImageView
                android:id="@+id/img_rv_item_episode_overview_thumbnail"
                android:layout_width="88dp"
                android:layout_height="63dp"
                android:src="@drawable/list_muneo_img"
                android:padding="3dp"
        />
        <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:padding="12dp"

        >
            <TextView
                    android:id="@+id/txt_rv_item_episode_overview_title"
                    android:text="1화 제목"
                    android:textColor="#484848"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:id="@+id/txt_rv_item_episode_overview_views"
                    android:text="조회수"
                    android:textColor="#CECECE"
                    android:textSize="12dp"
                    android:layout_below="@+id/txt_rv_item_episode_overview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:id="@+id/txt_rv_item_episode_overview_date"
                    android:text="날짜"
                    android:textColor="#CECECE"
                    android:textSize="12dp"
                    android:layout_toRightOf="@+id/txt_rv_item_episode_overview_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_rv_item_episode_overview_title"
                    android:layout_marginLeft="8dp"
            />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>