<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:background="@drawable/recycler_border"
>
    <ImageView
            android:id="@+id/img_rv_item_comment_overview_picture"
            android:src="@mipmap/ic_camera"
            android:layout_width="87dp"
            android:layout_height="66dp"
    />
    <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="66dp">
        <TextView
                android:id="@+id/txt_rv_item_comment_overview_name"
                android:text="이름"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#484848"
                android:textSize="16dp"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/txt_rv_item_comment_overview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="19.03.25 23.21.38"
                android:textSize="12dp"
                android:layout_toRightOf="@+id/txt_rv_item_comment_overview_name"/>
        <TextView
                android:id="@+id/txt_rv_item_comment_overview_comment"
                android:text="문어에 대한 내용이 아주 유익하네요. 추천드려요! 다들 꼭 보시길~^^"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txt_rv_item_comment_overview_name"
                android:lines="2"
        />
    </RelativeLayout>
</LinearLayout>
