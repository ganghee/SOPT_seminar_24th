<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/ll_rv_item_product_overview_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/img_rv_item_product_overview_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">
            <TextView
                    android:id="@+id/txt_rv_item_product_overview_title"
                    android:text="작품명"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#484848"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txt_rv_item_product_overview_numlike"
                    android:text="♥0"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:textColor="#f5cf45"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txt_rv_item_product_overview_author"
                    android:text="작품명"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="#bbbbbb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>