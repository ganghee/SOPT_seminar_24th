<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:theme="@style/MainTheme"
        tools:context=".LoginActivity"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingBottom="40dp"
            android:paddingHorizontal="40dp"
            android:orientation="vertical"
            android:layout_centerInParent="true">
        <ImageView
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:id="@+id/imgLoginLogo"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/logo_img"
                android:layout_gravity="center"/>
        <EditText
                android:layout_height="40dp"
                android:layout_width="240dp"
                android:id="@+id/edtLoginID"
                android:textSize="12dp"
                android:background="@drawable/gray_border"
                android:paddingLeft="15dp"
                android:layout_marginTop="80dp"
                android:textColorHint="#CECECE"
                android:hint="아이디"
                android:ems="10"
                android:inputType="textPersonName"/>
        <EditText
                android:layout_height="40dp"
                android:layout_width="240dp"
                android:id="@+id/edtLoginPW"
                android:textSize="12dp"
                android:background="@drawable/gray_border"
                android:paddingLeft="15dp"
                android:layout_marginTop="15dp"
                android:textColorHint="#CECECE"
                android:hint="패스워드"
                android:ems="10"
                android:inputType="textPassword"/>
        <Button
                android:layout_height="40dp"
                android:layout_width="240dp"
                android:id="@+id/btnLoginSubmit"
                android:textSize="14dp"
                android:background="@drawable/primary_border_fill"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                style="?android:attr/borderlessButtonStyle"
                android:text="로그인"/>

        <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">

            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:id="@+id/txtLoginInfo"
                    android:textSize="11dp"
                    android:textColor="#C7C7C7"
                    android:text="아직 회원이 아니십니까? "
                    android:layout_weight="1"/>

        </RelativeLayout>
        <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txtLoginSignup"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDarkYellow"
                    android:text=" 회원가입"
                    android:layout_weight="1"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>