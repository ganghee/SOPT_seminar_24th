<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/background_underline_yellow">

    <LinearLayout
            android:layout_height="70dp"
            android:layout_width="match_parent"
            android:id="@+id/ll_rv_item_episode_overview_container"
            android:orientation="horizontal">

        <ImageView
                android:layout_height="match_parent"
                android:layout_width="90dp"
                android:scaleType="centerCrop"
                android:id="@+id/img_rv_item_episode_overview_thumbnail"/>

        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:padding="10dp">

            <TextView android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:id="@+id/txt_rv_item_episode_overview_title"
                      android:textColor="#484848"
                      android:textStyle="bold"
                      android:textSize="15dp"
                      android:paddingVertical="5dp"
                      android:text="title"/>

            <TextView android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:id="@+id/txt_rv_item_episode_overview_description"
                      android:textColor="#CECECE"
                      android:textSize="12dp"
                      android:text="description"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>